{
  "name": "mascot extension",
  "version": "0.1",
  "manifest_version": 2,
  
  "description": "KC3のハッカソンで作成されたページ上を徘徊するマスコットアプリ",
  
  "permissions" : [
    "tabs", "http://*/*", "https://*/*", "contextMenus","activeTab", "storage"
  ],
  
  "icons" : {
    "48" : "image/icon48.png"
  },
  
  "background" : {
    "persistent": false,
    "scripts" : ["background.js"]
  },
  "browser_action" : {
    "default_icon" : "image/icon19.png"

    ,"default_title" : "browser action sample"
    ,"default_popup" : "popup.html"
  },
  "content_scripts": [
    {
      "matches" : ["http://*/*", "https://*/*"],
      "js" : ["jquery-1.10.2.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    "image/*"
  ]

}